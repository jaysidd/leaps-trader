{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(npm run *)",
      "Bash(npm install)",
      "Read(./)",
      "Edit(./**/*.js)",
      "Edit(./**/*.jsx)",
      "Edit(./**/*.json)"
    ],
    "deny": [
      "Bash(curl *)",
      "Bash(rm -rf /)",
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)"
    ],
    "ask": [
      "Bash(git push:*)",
      "Bash(docker run:*)"
    ]
  }
}